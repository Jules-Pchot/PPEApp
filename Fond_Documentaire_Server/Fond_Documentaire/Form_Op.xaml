<Window x:Class="Fond_Documentaire.Form_Op"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fond_Documentaire"
        mc:Ignorable="d"
        Title="Form_Op" Height="450" Width="800">
    <Grid>
        <Label Content="Operateur" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="80"/>
        <ListView Name="listView"  MaxHeight="100" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Column="0" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,40,10,249">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ISBN" DisplayMemberBinding="{Binding ISBN}"></GridViewColumn>
                    <GridViewColumn Header="Titre" DisplayMemberBinding="{Binding Titre}"></GridViewColumn>
                    <GridViewColumn Header="Auteur" DisplayMemberBinding="{Binding Auteur}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="BoutDetail" Content="Detail" HorizontalAlignment="Left" Height="31" Margin="14,199,0,0" VerticalAlignment="Top" Width="76" Click="AfficheDetail"/>
    </Grid>
</Window>
